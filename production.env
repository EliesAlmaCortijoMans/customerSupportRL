# Production Environment Variables for Railway
# These should be set in Railway dashboard

# Environment
ENVIRONMENT=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
WORKERS=1

# CORS Settings (Update with your Vercel domain)
ALLOWED_ORIGINS=["https://your-app.vercel.app", "https://customer-support-rl.vercel.app"]

# Logging
LOG_LEVEL=info

# Database (if needed later)
# DATABASE_URL=postgresql://...

# Model Storage (if using cloud storage)
# MODEL_STORAGE_PATH=/app/models

# Feature Flags
ENABLE_TRAINING=true
ENABLE_EVALUATION=true
MAX_ENVIRONMENTS=10
MAX_TRAINING_SESSIONS=5
